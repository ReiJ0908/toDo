<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/all_corner_round"
    android:backgroundTint="@color/colorBorder"
    android:padding="10dp">

    <!-- Task Title -->
    <TextView
        android:id="@+id/view_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/edit_task_button"
        android:paddingEnd="10dp"
        android:text="Task Text"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp" />

    <!-- Due Date -->
    <TextView
        android:id="@+id/view_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_task"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="4dp"
        android:text="Due: (none)"
        android:textColor="@color/colorTextSecondary"
        android:textSize="14sp"
        android:textStyle="italic" />

    <!-- Edit Text Field -->
    <EditText
        android:id="@+id/edit_task_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/save_edit_button"
        android:hint="Edit Task"
        android:paddingEnd="10dp"
        android:textSize="18sp"
        android:visibility="gone" />

    <!-- Edit Button -->
    <Button
        android:id="@+id/edit_task_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/done"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="Edit" />

    <!-- Save Button -->
    <Button
        android:id="@+id/save_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/done"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="Save"
        android:visibility="gone" />

    <!-- Delete / Done Button -->
    <ImageButton
        android:id="@+id/done"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Mark as done"
        android:src="@drawable/ic_baseline_check_box_24" />

    <!-- Bottom Border Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#CCCCCC" />

</RelativeLayout>
